								$('.live_msg').scrollTop($('.live_msg')[0].scrollHeight);
							}
						} else {//否则为单个处理
							//判断 禁言目标id为自己的时候，修改自身禁言状态，并发送禁言事件到talk.html
							T.append('.live_msg', 'live_msg_gag', extra.extra);
							$('.live_msg').scrollTop($('.live_msg')[0].scrollHeight);
						}
					}
				})
			})
		}
