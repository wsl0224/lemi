			.more-list .item-img .secret-img.on {
				background-image: url(../../image/live-more-secret-on.png);
			}
			.more-list .item-img .time-img {
				background-image: url(../../image/live-more-time-on.png);
			}
			.more-list .item-img .time-img.on {
				background-image: url(../../image/live-more-time-on.png);
			}
