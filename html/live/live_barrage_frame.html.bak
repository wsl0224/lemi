			.audience .audience_btn {
				padding: 15px 0 5px 0;
				border-top: 1px solid #D9D9D9;
			}
			.audience .audience_btn > div {
				color: #909090;
			}
			.audience .fans_top_1 {
				position: absolute;
				left: -65px;
				top: 10px;
			}
			.audience .fans_top_1 .img, .audience .fans_top_1 .img-frm {
				width: 50px;
				height: 50px;
			}
			/*用户资料卡 end*/
			.demo {
				padding-top: 12%;
				width: 100%;
				height: 100%;
				z-index: -1;
				position: absolute;
			}
			.aixin {
				width: 40px;
				height: 40px;
				z-index: 99;
				position: absolute;
			}
		</style>
